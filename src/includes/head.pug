mixin head(title, description, image, large, page, imageAlt)
  head
    title= title
    meta(name="description", content=description)
    meta(name="robots", content="noindex, nofollow")
    meta(name="charset", content="UTF-8")
    meta(
      property="og:url",
      content="https://bananochallenge.hdert.com/" + page + ".html"
    )
    meta(property="og:title", content=title)
    meta(property="og:description", content=description)
    meta(property="og:image", content=image)
    meta(property="og:type", content="website")
    meta(
      name="twitter:card",
      content=large === true ? "summary_large_image" : "summary"
    )
    meta(name="twitter:image:alt", content=imageAlt)
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="../scss/styles.scss")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(
      href="https://fonts.googleapis.com/css2?family=Patua+One&display=swap",
      rel="stylesheet"
    )
    // Favicons generated by https://realfavicongenerator.net/
    link(
      rel="apple-touch-icon",
      sizes="180x180",
      href="../img/icons/apple-touch-icon.png"
    )
    link(
      rel="icon",
      type="image/png",
      sizes="32x32",
      href="../img/icons/favicon-32x32.png"
    )
    link(
      rel="icon",
      type="image/png",
      sizes="16x16",
      href="../img/icons/favicon-16x16.png"
    )
    link(rel="manifest", href="../img/icons/site.webmanifest")
    link(
      rel="mask-icon",
      href="../img/icons/safari-pinned-tab.svg",
      color="#1a8223"
    )
    meta(name="msapplication-TileColor", content="#1a8223")
    meta(name="theme-color", content="#1a8223")
